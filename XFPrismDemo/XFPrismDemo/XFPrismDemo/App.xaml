<?xml version="1.0" encoding="utf-8" ?>
<prism:PrismApplication xmlns="http://xamarin.com/schemas/2014/forms"
                        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                        xmlns:cv="clr-namespace:XFPrismDemo.Converters"
                        xmlns:prism="clr-namespace:Prism.Unity;assembly=Prism.Unity.Forms"
                        x:Class="XFPrismDemo.App">

    <Application.Resources>
        <ResourceDictionary >
            <cv:InverseVisibilityConverter x:Key="InverseVisibilityConverter" />
            <cv:BoolToOpacityConverter x:Key="BoolToOpacityConverter" />
            <Style TargetType="ContentPage">
                <Setter Property="BackgroundColor" Value="#CFD8DC" />
            </Style> 
            <Style TargetType="BoxView">
                <Setter Property="Color" Value="#BDBDBD" />
                <Setter Property="HeightRequest" Value="0.5" />
            </Style>
            <Style TargetType="ActivityIndicator">
                <Setter Property="Color" Value="#6ff9ff" />
            </Style>
            <Style TargetType="Label">
                <Setter Property="TextColor" Value="#212121" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</prism:PrismApplication>